<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardMaxElevation="2dp"
        android:id="@+id/card_view"
        app:cardCornerRadius="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Activity"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="155dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:id="@+id/activity"></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/layout_cardview">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/l1"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/tv_id"
                    android:text="ID:"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:textColor="@color/darkblue"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="123dp"
                    android:text="id"
                    android:id="@+id/tv_idtext"
                    android:textStyle="normal"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/l2"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/tv_activity"
                    android:text="Activity type:"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:textColor="@color/darkblue"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="act"
                    android:id="@+id/tv_activitytext"
                    android:textStyle="normal"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/l3"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/tv_date"
                    android:text="Date:"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:textColor="@color/darkblue"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:id="@+id/tv_datetext"
                    android:text="date"
                    android:textStyle="normal"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/l4"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/tv_time"
                    android:text="Time:"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:textColor="@color/darkblue"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="96dp"
                    android:id="@+id/tv_timetext"
                    android:textStyle="normal"
                    android:text="time"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/l5"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/tvsoloteam"
                    android:text="Solo/Team:"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:textColor="@color/darkblue"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:id="@+id/tv_soloteamtext"
                    android:textStyle="normal"
                    android:textSize="20dp"
                    android:text="solo"
                    android:textColor="@color/colorPrimary">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/l6"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:id="@+id/tv_actdes"
                    android:text="Description:"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:textColor="@color/darkblue"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:id="@+id/tv_actdestext"
                    android:textStyle="normal"
                    android:text="description"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary">

                </TextView>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</ScrollView>