<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_frame"


    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_marginBottom="515dp"
        android:layout_marginTop="-5dp"
        android:id="@+id/img1"

        android:src="@drawable/ttt2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:fontFamily="@font/monbold"
        android:textSize="49dp"
        android:layout_marginTop="230dp"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We are happy to serve you!"
        android:textColor="#000"
        android:fontFamily="@font/monreg"
        android:layout_marginTop="299dp"
        android:textSize="15dp"
        android:layout_marginLeft="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login using :"
        android:id="@+id/txt"
        android:textColor="#000"
        android:textSize="18dp"
        android:fontFamily="@font/monbold"

        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
             android:layout_marginTop="530dp"
             android:layout_marginLeft="120dp"
            android:padding="5dp"


       />


    </LinearLayout>







</RelativeLayout>