<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/grey"
    android:layout_height="match_parent"
    tools:context=".Fragments.Delete">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Delete Activity"
        android:textAlignment="center"
        android:textSize="30dp"
        android:fontFamily="@font/monbold"
        android:id="@+id/tv"
        android:textColor="@color/colorPrimary"></TextView>
    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border_edittext"
        android:layout_marginHorizontal="20dp"
        android:theme="@style/TextLabel"
        android:id="@+id/tex"
        android:clickable="true"
        android:layout_marginTop="20dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/edit_id1"
            android:hint="Enter ID"
            android:textSize="15sp"
            android:singleLine="true"
            android:inputType="number"
            android:drawablePadding="10dp"
            android:clickable="true"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_numbered_list"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tex3"
        android:layout_marginTop="40dp"
        android:id="@+id/confirm2"
        android:text="Delete Activity"
        android:paddingLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_delete_forever_black_24dp"
        android:textAllCaps="false"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"></Button>



</LinearLayout>